        </dependencies>
    </dependencyManagement>
	
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${maven-surefire-plugin.version}</version>
                <configuration>
                    <skipTests>false</skipTests>
                    <includes>
                    	<include>**/commons.teste/*Test.java</include>
                        <include>**/dynamodb.teste/*Test.java</include>
                        <include>**/kinesis.teste/*Test.java</include>
                        <include>**/s3.teste/*Test.java</include>
                        <include>**/sns.teste/*Test.java</include>
                        <include>**/sqs.teste/*Test.java</include>
                    </includes>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <!-- Jacoco Code Coverage -->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>${jacoco.version}</version>
                <configuration>
                    <outputDirectory>${project.build.directory}/jacoco</outputDirectory>
                    <destFile>${sonar.jacoco.reportPath}</destFile>
                    <append>true</append>
                    <excludes>
                        <exclude>**/**Configuration.*</exclude>
                        <exclude>**/**Exception.*</exclude>
                        <exclude>**/**Builder.*</exclude>
                        <exclude>**/**Entity.*</exclude>
                        <exclude>**/**DTO.*</exclude>
                        <exclude>**/**Dto.*</exclude>
                        <exclude>**/**Parse.*</exclude>
                        <exclude>**/**Config.*</exclude>
                        <exclude>**/**Creator.*</exclude>
                        <exclude>**/**Enum.*</exclude>
                    </excludes>

                </configuration>
                <executions>
                    <execution>
                        <id>default-prepare-agent</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>default-report</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
			
        </plugins>
    </build>
    
