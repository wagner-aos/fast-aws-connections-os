                <artifactId>aws-java-sdk-sns</artifactId>
                <version>${amazon-aws.version}</version>
            </dependency>
			
            <!-- AWS DynamoDB-->
            <dependency>
                <groupId>com.amazonaws</groupId>
                <artifactId>aws-java-sdk-dynamodb</artifactId>
                <version>${amazon-aws.version}</version>
            </dependency>
			
            <!-- AWS Kinesis-->
            <dependency>
                <groupId>com.amazonaws</groupId>
                <artifactId>aws-java-sdk-kinesis</artifactId>
