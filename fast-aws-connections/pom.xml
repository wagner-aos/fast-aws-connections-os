            </dependency>
			
            <!-- HornetQ -->
            <dependency>
                <groupId>javax.jms</groupId>
                <artifactId>javax.jms-api</artifactId>
                <version>${javax.jms.version}</version>
            </dependency>

            <dependency>
                <groupId>org.hornetq</groupId>
                <artifactId>hornetq-server</artifactId>
                <version>${hornetq.version}</version>
            </dependency>
				
